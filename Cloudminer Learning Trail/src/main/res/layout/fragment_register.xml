<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="me.cloudmine.cloudminerlearningtrail.cloudminerlearningtrail.fragments.RegisterFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f5f6f6"
        android:orientation="vertical">

        <EditText
            android:id="@+id/registerName"
            style="@style/CloudmineTrailTheme.EditBoxCredentials"
            android:hint="Username"
            android:inputType="textPersonName" />

        <View style="@style/CloudmineTrailTheme.Seperator" />

        <EditText
            android:id="@+id/registerEmail"
            style="@style/CloudmineTrailTheme.EditBoxCredentials"
            android:hint="Email Address"
            android:inputType="textEmailAddress" />

        <View style="@style/CloudmineTrailTheme.Seperator" />

        <EditText
            android:id="@+id/registerPassword"
            style="@style/CloudmineTrailTheme.EditBoxCredentials"
            android:hint="Password"
            android:inputType="textPassword" />

        <View style="@style/CloudmineTrailTheme.Seperator" />

        <EditText
            android:id="@+id/registerPasswordRepeat"
            style="@style/CloudmineTrailTheme.EditBoxCredentials"
            android:hint="Password"
            android:inputType="textPassword" />


    </LinearLayout>

    <Button
        android:id="@+id/registerButton"
        style="@style/CloudmineTrailTheme.Button.Default"
        android:layout_marginTop="15dp"
        android:text="Sign up" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" />

</LinearLayout>
